cmd - space [
    "alacritty" : tmux popup -h 80% -w 80% -E /Users/leoshimonaka/proj/vrs/scripts/launcher_cli.sh
    * : alacritty msg create-window \
        -e zsh -ic /Users/leoshimonaka/proj/vrs/scripts/launcher_cli.sh; osascript -e 'activate application "Alacritty"' 
]
