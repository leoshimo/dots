# Launch via sockfile
# - Pro: Fast
# - Con: Requires hack to foreground
cmd - space : alacritty msg create-window \
    -e zsh -ic /Users/leoshimonaka/proj/vrs/scripts/launcher_cli.sh; osascript -e 'activate application "Alacritty"' 

